@model IEnumerable<JobOffers.Models.Jobs>

@{
    ViewBag.Title = "Search";
}

<div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">Search Results of : @ViewBag.search</div>
            <div class="panel-body">
                <div class="row">

                    @foreach (var subItem in Model)
                    {
                        <div class="col-md-3 thumbnail thumbnailJobs">
                            <img src="~/uploads/@subItem.JobImage" />
                            <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                            <h4>@Html.ActionLink("More details", "Details", new { id = subItem.Id }, new { @class = "btn btn-success" })</h4>
                        </div>
                    }
                </div>
            </div>
        </div>
</div>

