@{
    ViewBag.Title = "Details";
}

<h3>Job details</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Categorie.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categorie.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobTitle)
